    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Build",
            "cargo": {
                "args": [
                    "build",
                ],
                "filter": {
                    "name": "codectrl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run (debug)",
            "cargo": {
                "args": [
                    "run",
                ],
                "filter": {
                    "name": "codectrl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run (release)",
            "cargo": {
                "args": [
                    "run",
                    "--release"
                ],
                "filter": {
                    "name": "codectrl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run (headless) (debug)",
            "cargo": {
                "args": [
                    "run",
                    "--",
                    "-H"
                ],
                "filter": {
                    "name": "codectrl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}